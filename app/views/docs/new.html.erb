<% provide(:title, "Upload a file") %>
<h1>Upload a File</h1></div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(@doc, html: { multipart: true }) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
    
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
  
      <%= f.label :asset %>
      <%= f.file_field :asset, placeholder: "pick a file", class: 'form-control'%>
    
      <div class="text-center">
        <%= link_to "Nevermind, go back", docs_path, class: 'btn btn-info' %>
      </div>
      
      <div class="spacer"></div>
      
      <div class="col-md-4 col-md-offset-4">
          <%= f.submit 'Upload', class: 'btn btn-success' %>
      </div>
      
    <% end %>
  </div>
</div>
